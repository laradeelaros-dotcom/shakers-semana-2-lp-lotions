<h1>{{ page.title }}</h1>
<p>{{ page.content }}</p>

{% assign collection = collections['magic'] %}

<h2>{{ collection.title }}</h2>
<h3>{{ collection.description }}</h3>

{% for product in collection.products %}
  <p>
    <b>Título do Produto:
    </b>
    {{ product.title }}</p>
  <p>
    <b>Preço:
    </b>
    {{ product.price }}</p>
  <img
    src="{{ product.featured_image.src |  image_url: width: '100px'  }}"
    alt="product.featured_image.alt"
    width="100px"
    height="auto" />
{% endfor %}

